# ============================================
# Configurações do Espaço Arthemi
# ============================================

# ---- Banco de Dados ----
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/arthemi?schema=public"

# ---- Next.js ----
NEXT_PUBLIC_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ---- Asaas (Pagamentos PIX/Cartão) ----
# Obter em https://www.asaas.com/configuracoes/integracao
ASAAS_API_KEY=""
ASAAS_WEBHOOK_TOKEN=""
ASAAS_SANDBOX="true"
ASAAS_ENV="sandbox"

# ---- Modo de Operação ----
# Quando true, simula pagamentos sem chamar API real do Asaas
ASAAS_MOCK_MODE="true"

# ---- Autenticação ----
# JWT para sessão do cliente (mínimo 32 caracteres)
JWT_SECRET="dev-secret-arthemi-2025-change-in-production"
# Sessão admin
ADMIN_SESSION_SECRET="dev-secret-change-in-production"
ADMIN_PASSWORD=""

# ---- Email (Resend) ----
# Obter em https://resend.com
RESEND_API_KEY=""
EMAIL_FROM="Espaço Arthemi <noreply@arthemi.com.br>"

# ---- Token de Ativação de Email ----
# PEPPER para hash de tokens de ativação (32+ caracteres aleatórios)
EMAIL_TOKEN_PEPPER="change-this-to-random-string-in-production"

# ---- WhatsApp ----
WHATSAPP_NUMBER="5531999999999"
