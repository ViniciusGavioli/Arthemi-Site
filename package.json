{
  "name": "arthemi-site",
  "version": "1.0.0",
  "description": "MVP do site Espaço Arthemi - Coworking de Saúde",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "migrate:deploy": "node -e \"if(!process.env.DIRECT_URL){console.error('❌ DIRECT_URL não definida. Use conexão direta (porta 5432).'); process.exit(1)}\" && prisma migrate deploy",
    "migrate:status": "prisma migrate status",
    "seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "generate": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "validate:env": "node scripts/validate-env.js",
    "smoke": "npx tsc --noEmit && npm test && npm run build"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.10",
    "@fullcalendar/daygrid": "^6.1.10",
    "@fullcalendar/interaction": "^6.1.10",
    "@fullcalendar/react": "^6.1.10",
    "@fullcalendar/resource": "^6.1.20",
    "@fullcalendar/resource-timegrid": "^6.1.20",
    "@fullcalendar/timegrid": "^6.1.10",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cookie": "^1.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "import-fresh": "^3.3.1",
    "jsonwebtoken": "^9.0.3",
    "limiter": "^3.0.0",
    "lucide-react": "^0.561.0",
    "next": "^14.2.21",
    "react": "^18.2.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.2.0",
    "resend": "^6.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@prisma/client": "5.22.0",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/cookie": "^0.6.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-datepicker": "^4.19.5",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.3.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.4.32",
    "prisma": "5.22.0",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
